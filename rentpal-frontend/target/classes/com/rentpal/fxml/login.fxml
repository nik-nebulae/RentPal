<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.rentpal.controllers.auth.LoginController"
           prefWidth="800" prefHeight="600">
    <stylesheets>
        <URL value="@/css/login.css" />
    </stylesheets>


    <VBox fx:id="loginBox"
          alignment="CENTER"
          spacing="20"
          maxWidth="420"
          maxHeight="400">
        <Label text="Login" styleClass="label-title"/>

        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>

        <Button text="Login" onAction="#handleLogin"/>
        <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword"/>
        <Hyperlink text="Sign Up" onAction="#handleSignUp"/>

    </VBox>

</StackPane>

